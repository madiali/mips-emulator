<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MipsController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="open" mnemonicParsing="false" onAction="#handleOpen" text="Open" />
                  <MenuItem fx:id="exit" mnemonicParsing="false" onAction="#handleExit" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Run">
            <items>
              <MenuItem fx:id="go" mnemonicParsing="false" onAction="#handleGo" text="Go" />
                  <MenuItem fx:id="pause" mnemonicParsing="false" onAction="#handlePause" text="Pause" />
                  <MenuItem fx:id="stepForward" mnemonicParsing="false" onAction="#handleStepForward" text="Step Forward" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="650.0" BorderPane.alignment="CENTER">
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <bottom>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                     <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Label text="X: " fx:id="xLabel" />
                              <Slider blockIncrement="1.0" max="511.0" onMouseDragged="#handleXSliderDrag" prefWidth="600.0" showTickLabels="true" value="255.0" fx:id="xSlider" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Label fx:id="yLabel" text="Y: " />
                              <Slider fx:id="ySlider" blockIncrement="1.0" max="511.0" onMouseDragged="#handleYSliderDrag" prefWidth="600.0" showTickLabels="true" value="255.0" />
                           </children>
                        </HBox>
                        <Button fx:id="resetButton" mnemonicParsing="false" onAction="#handleResetButton" prefWidth="640.0" text="Reset" />
                     </children>
                     <padding>
                        <Insets bottom="100.0" left="10.0" right="10.0" top="10.0" />
                     </padding></VBox>
               </bottom>
               <center>
                  <GridPane fx:id="vgaDisplay" maxHeight="480.0" maxWidth="640.0" minHeight="480.0" minWidth="640.0" prefHeight="480.0" prefWidth="640.0" style="-fx-border: 2; -fx-border-color: black;" BorderPane.alignment="CENTER">
                  </GridPane>
               </center>
            </BorderPane>
         </center>
         <right>
            <TabPane prefHeight="700.0" prefWidth="500.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
              <tabs>
                <Tab closable="false" text="Registers">
                     <content>
                        <TableView prefHeight="200.0" prefWidth="200.0">
                          <columns>
                            <TableColumn prefWidth="250.0" text="Name" />
                            <TableColumn prefWidth="250.0" text="Value" />
                          </columns>
                        </TableView>
                     </content>
                  </Tab>
                <Tab text="Instruction Memory">
                     <content>
                        <TableView prefHeight="200.0" prefWidth="200.0">
                           <columns>
                              <TableColumn prefWidth="250.0" text="Address" />
                              <TableColumn prefWidth="250.0" text="Instruction" />
                           </columns>
                        </TableView>
                     </content>
                  </Tab>
                  <Tab text="Data Memory">
                     <content>
                        <TableView prefHeight="200.0" prefWidth="200.0">
                          <columns>
                            <TableColumn prefWidth="166.0" text="Mapped Address" />
                            <TableColumn prefWidth="166.0" text="Relative Address" />
                              <TableColumn prefWidth="166.0" text="Value" />
                          </columns>
                        </TableView>
                     </content>
                  </Tab>
                  <Tab text="IO">
                     <content>
                        <TableView prefHeight="200.0" prefWidth="200.0">
                           <columns>
                              <TableColumn prefWidth="250.0" text="IO Device" />
                              <TableColumn prefWidth="250.0" text="Value" />
                           </columns>
                        </TableView>
                     </content>
                  </Tab>
              </tabs>
            </TabPane>
         </right>
      </BorderPane>
   </center>
</BorderPane>
